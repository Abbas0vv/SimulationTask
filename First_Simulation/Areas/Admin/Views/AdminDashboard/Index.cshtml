@using First_Simulation.Database.Models
@model List<Doctor>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pot List</title>

    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Your CSS -->
    <link rel="stylesheet" href="~/admin/assets/css/index.css">
</head>
<body>
    <div class="container mt-5">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-success">Pot List</h2>
            <a asp-controller="AdminDashboard" asp-action="Create" class="btn btn-success btn-lg rounded-3">Create New Doctor</a>
        </div>

        <!-- Table -->
        <div class="card shadow rounded-4 border-0">
            <div class="card-body">
                <table class="table table-hover align-middle">
                    <thead class="table-success">
                        <tr>
                            <th>Order</th>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Description</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int counter = 1;
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@counter</td>
                                <td>
                                    <img src="~/upload/doctor/@item.ImageUrl"
                                         style="width: 60px; height: auto; border-radius: 8px; margin-right: 10px;">
                                    @item.Name
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Surname</td>
                                <td class="text-center">
                                    <div class="d-flex justify-content-center gap-2">
                                        <a asp-controller="AdminDashboard" asp-action="update" asp-route-id="@item.Id" class="btn btn-warning btn-sm rounded-3 px-3">Update</a>
                                        <form asp-controller="AdminDashboard" asp-action="delete" method="post">
                                            <input type="hidden" name="id" value="@item.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm rounded-3 px-3">Delete</button>
                                        </form>
                                    </div>
                                </td>

                            </tr>
                            counter++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
