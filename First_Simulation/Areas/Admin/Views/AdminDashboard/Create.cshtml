@using First_Simulation.Database.Models
@* @using First_Simulation.Database.ViewModels *@
@model Doctor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Pot</title>

    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>
    <div class="container mt-5">
        <div class="card shadow rounded-4 border-0" style="background-color: #f5fdf6;">
            <div class="card-header bg-success text-white rounded-top-4">
                <h3 class="mb-0">Add New Pot</h3>
            </div>
            <div class="card-body">
                <form asp-controller="AdminDashboard" asp-action="Create" method="post" enctype="multipart/form-data">
                    <!-- Title -->
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label text-success fw-bold">Name</label>
                        <input type="text" class="form-control rounded-3" asp-for="Name" id="Name" />
                        <span asp-for="Name" asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!-- Price -->
                    <div class="mb-3">
                        <label asp-for="Surname" class="form-label text-success fw-bold">Surname</label>
                        <input type="text" class="form-control rounded-3" asp-for="Surname" id="Surname"/>
                        <span asp-for="Surname" asp-validation-for="Surname" class="text-danger"></span>
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label asp-for="Age" class="form-label text-success fw-bold">Age</label>
                        <input type="number" class="form-control rounded-3" id="Age" asp-for="Age"></input>
                        <span asp-for="Age" asp-validation-for="Age" class="text-danger"></span>

                    </div>

                    <!-- Image Selection -->
                    <div class="mb-3">
                        <label asp-for="File" class="form-label text-success fw-bold">Image</label>
                        <input type="File" class="form-control rounded-3" asp-for="File" id="File" />
                        <span asp-for="File" asp-validation-for="File" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-success btn-lg rounded-3 px-4">Create</button>
                    <!-- Back to List Button -->
                    <a asp-controller="AdminDashboard" asp-action="index" class="btn btn-secondary btn-lg rounded-3 px-4 ms-2">← Back to List</a>

                </form>
            </div>
        </div>
    </div>
</body>
</html>
